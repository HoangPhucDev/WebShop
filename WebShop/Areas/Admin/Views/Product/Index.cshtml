@model List<ModelWebBanHang.SAN_PHAM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section tieude{Quản Lý Sản Phẩm}
@section script{
<script src="~/Content/js/sweetalert.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/css/sweetalert.css">
    <script>
        
        jQuery('#btnXoa').click(function () {
            swal({
                title: "Are you sure?",
                text: "You will not be able to recover this imaginary file!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, delete it!",
                closeOnConfirm: false
            },
                function () {
                    swal("Deleted!", "Your imaginary file has been deleted.", "success");
                });
        });  
    </script>
}
<p>
  @Html.ActionLink("Thêm Mới", "Create",new { },htmlAttributes: new {@class= "btn  btn-success" })
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh Sách Sản Phẩm
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Tên")
                            </th>

                            <th>
                                @Html.DisplayName("Giá Nhập")
                            </th>
                            <th>
                                @Html.DisplayName("Giá Bán")
                            </th>
                            <th>
                                @Html.DisplayName("Số Lượng")
                            </th>
                            <th>
                                @Html.DisplayName("Hình")
                            </th>
                            <th>
                                @Html.DisplayName("Ngày Nhập")
                            </th>
                            <th>
                                @Html.DisplayName("Nhóm")
                            </th>
                            <th>
                                @Html.DisplayName("Nhà SX")
                            </th>
                            <th>
                                @Html.Label("Trạng Thái")
                            </th>


                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            
                            <tr>
                                <td>
                                    @Html.ActionLink(item.TEN_SP, "Details", new { id = item.MA_SP })
                                </td>

                                <td>
                                    @String.Format("{0:c0}", item.GIA_NHAP)
                                </td>
                                <td>
                                    @String.Format("{0:c0}", item.GIA_BAN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SO_LUONG)
                                </td>
                                <td>
                                   <div><a href="@Url.Action("Details", new { id = item.MA_SP })"><img src="~/Content/img/@item.HINH_ANH" width="100px" height="100px" /></a></div> 
                                </td>
                                
                                <td>
                                    @String.Format("{0:d} - {0:T}", item.NGAY_NHAP)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NHOM_SAN_PHAM.TEN_NHOM_SP)
                                </td>
                                <td>
                                    @item.NHA_CUNG_CAP.TEN_NCC
                                </td>
                                <td>
                                    @(item.TRANG_THAI == 1 ? "Kích Hoạt" : "Khóa")
                                </td>


                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.MA_SP })
                                   
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.MA_SP },new {id="btnXoa" })*@
                                    @*<a id="btnXoa">Xóa</a>*@
                                    @*<a id="btnXoa" value="@item.MA_SP">Xóa</a>*@
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
<!-- /.panel -->

