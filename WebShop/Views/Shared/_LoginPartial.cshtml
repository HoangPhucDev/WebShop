

<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
    <div class="modal-dialog modal-sm">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="Login">Đăng Nhập</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Index", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, null)
                    <div class="form-group">
                        @Html.TextBox("Username","", new { @type = "text", @class = "form-control", @placeholder = "Tài Khoảng", @autofocus = "autofocus" })
                       
                        
                    </div>
                    <div class="form-group">
                        @Html.TextBox("Password","", new { @type = "password", @class = "form-control", @placeholder = "Mật Khẩu", @autofocus = "autofocus" })
                       
                        
                    </div>
                    <div class="checkbox">
                        <label>
                            @Html.CheckBox("RememberMe")Ghi Nhớ
                        </label>
                    </div>
                    <p class="text-center">
                        <button class="btn btn-template-main"><i class="fa fa-sign-in"></i> Đăng Nhập</button>
                    </p>

                }

                <p class="text-center text-muted">Chưa có tài khoảng?</p>
                <p class="text-center text-muted"><a href="customer-register.html"><strong>Hãy Đăng Ký Ngay</strong></a>! Chỉ mất 1&nbsp;phút để được hưởng nhiều ưu đãi từ chúng tôi!</p>

            </div>
        </div>
    </div>
</div>
