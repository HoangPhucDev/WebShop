@model IEnumerable<ModelWebBanHang.HOA_DON>
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
@section breadcrumbs{<li>@Html.Label("Quản Lý Đơn Hàng") </li>}
@section ThanhVien {}
@section hoadon{class="active"}

<!-- *** LEFT COLUMN ***
_________________________________________________________ -->

<div class="col-md-9" id="customer-orders">

    <p class="text-muted lead">Nếu bạn có thắc mắc, vui lòng <a href="@Url.Action("contact","home")">LIÊN HỆ CHÚNG TÔI</a>, Trung tâm dịch vụ khách hàng của chúng tôi đang làm việc cho bạn 24/7.</p>

    <div class="box">

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Mã Đơn Hàng</th>
                        <th>Ngày Đặt</th>
                        <th>Tổng Tiền</th>
                        <th>Trạng Thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th># @item.MA_HD</th>
                            <td>@item.NGAY_LAP</td>
                            <td>@String.Format("{0:0,0} VNĐ", item.THANH_TIEN)</td>
                            @{
                                switch (item.TRANG_THAI)
                                {
                                    case 0:
                                        <text>
                            <td><span class="label label-warning">Đang Chờ</span></td>
                                        </text>
                                        break;
                                    case 1:
                                        <text>
                            <td><span class="label label-info">Đã Duyệt</span></td>
                                        </text>
                                        break;
                                    case 2:
                                        <text>
                            <td><span class="label label-success">Đã Hoàn Thành</span></td>
                                        </text>
                                        break;
                                    case 3:
                                        <text>
                            <td><span class="label label-danger">Đã Hủy</span></td>
                                        </text>
                                        break;
                                    default:

                                        break;
                                }

                            }
                        <td>
                            <a href="@Url.Action("DetailOrder",new {IDOrder = item.MA_HD})" class="btn btn-template-main btn-sm">Chi Tiết</a>
                        </td>
                    </tr>
                                }
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->

    </div>
    <!-- /.box -->

</div>
<!-- /.col-md-9 -->
<!-- *** LEFT COLUMN END *** -->
