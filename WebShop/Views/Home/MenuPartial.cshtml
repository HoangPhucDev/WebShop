@model List<ModelWebBanHang.NHOM_SAN_PHAM>

    <div class="col-md-3">
        <!-- *** MENUS AND WIDGETS ***
        _________________________________________________________ -->
        <div class="panel panel-default sidebar-menu">

            <div class="panel-heading">
                <h3 class="panel-title">Danh Sách Sản Phẩm</h3>
            </div>

            <div class="panel-body">
                <ul class="nav nav-pills nav-stacked category-menu">
                    @foreach (var item in Model)
            {
                        <li>
                            @Html.ActionLink(@item.TEN_NHOM_SP, "GroupProduct", new { IdGroup = item.MA_NHOM_SP, NameGroup = item.TEN_NHOM_SP.Trim() })
                            <ul>
                                @Html.Action("SubMenuPartial", "Home", new { ParentId = item.MA_NHOM_SP })
                            </ul>
                        </li>
                    }
                </ul>

            </div>
        </div>
        <!-- *** MENUS AND FILTERS END *** -->
    </div>